<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="ppai-pu" transaction-type="RESOURCE_LOCAL">
    
      <!-- Entidades -->
      <class>model.Rol</class>
      <class>model.Empleado</class>
      <class>model.Usuario</class>
      <class>model.EstacionSismologica</class>
      <class>model.Sismografo</class>
      <class>model.OrdenDeInspeccion</class>
      <class>model.CambioDeEstado</class>
      <class>model.MotivoTipo</class>
      <class>model.MotivoFueraDeServicio</class>

      <properties>
        <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:ppai_grupo14.db"/>
        <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
        <property name="hibernate.show_sql" value="false"/>
        <property name="hibernate.format_sql" value="true"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
      </properties>
  </persistence-unit>
</persistence>